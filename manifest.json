{
  "name": "__MSG_extName__",
  "version": "0.5.0",
  "manifest_version": 2,
  "description": "__MSG_extDesc__",
  "icons": {
    "16": "img/icon-colored16.png",
    "32": "img/icon-colored48.png",
    "48": "img/icon-colored72.png",
    "128": "img/icon-colored128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "js/background.js"
    ],
